<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="DrinkingGames.QuestionsPage">
	<ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#2277FF">
            <Label x:Name="QuestionLabel" 
                AbsoluteLayout.LayoutFlags="PositionProportional" 
                AbsoluteLayout.LayoutBounds="0.5,0.5"
                Text="Testen" 
                TextColor="White" 
                FontSize="60"
            />
            <Button Text="Next question" 
                    Clicked="NextQuestion"
                    AbsoluteLayout.LayoutBounds="0.5,0.9"
                    AbsoluteLayout.LayoutFlags="PostionProportional"/>
             <Button Text="Add question" 
                    Clicked="Handle_Clicked"
                    AbsoluteLayout.LayoutBounds="0.5,0.1"
                    AbsoluteLayout.LayoutFlags="PostionProportional"/>
        </AbsoluteLayout>
	</ContentPage.Content>
</ContentPage>
